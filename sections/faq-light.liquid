{{ 'component-card.css' | asset_url | stylesheet_tag }}
<div class="review-slider page-width">
<div class="shipping-bar put-in customers-slide" >
  <h2 class="center">Real Reviews From Real Customers</h2>
</div>
<div class="main-widget yotpo yotpo-reviews-carousel" 
data-background-color="transparent" 
data-mode="top_rated" 
data-type="product" 
data-count="3" 
data-show-bottomline="1" 
data-autoplay-enabled="1" 
data-autoplay-speed="3000" 
data-show-navigation="1">&nbsp;</div><br><br>

<div class="shipping-bar use-for leave put-in read-more">
<div class="container">
 <a href="#review-section"><h2>Read more reviews</h2></a>
</div>
</div>


<div class="shipping-bar put-in philosphy top-space">
  <div class="container">
    <h2 class="text-center">Customers Also Purchased</h2>
    <div class="page-width_container">
      {%- assign collection = collections[section.settings.collection] -%}
     <ul id="Slider-{{ section.id }}" class="collection-slider grid product-grid contains-card contains-card--product{% if settings.card_style == 'standard' %} contains-card--standard{% endif %}" role="list" aria-label="{{ 'general.slider.name' | t }}">
        {%- for product in collection.products  -%}
          <li id="Slide-{{ section.id }}-{{ forloop.index }}" class="grid__item slider__slide">
            {% render 'card-product',
            card_product: product,
            media_aspect_ratio: "square",
              show_rating: true,
            section_id: section.id
            %}
          </li>
        {%- endfor -%}
        </ul>
    </div>
</div>
  </div>
