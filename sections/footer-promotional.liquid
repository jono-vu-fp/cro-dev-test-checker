{% style %}
@media screen and (min-width: 750px) {
 #shopify-section-{{section.id}} {
    margin-top: {{ section.settings.margin_top }}px;
  }
  .sp_icon {
  margin-right: 15px;
  }
  .sp_blks.Container {
  flex-wrap: wrap;
  }
}
#shopify-section-{{section.id}}{
  background-color: {{section.settings.bgcolor}};
}
.sp_blks.Container {
  display: flex;
}
.sp_blk:first-child {
  border: 0;
}
.sp_blk {
  width: 33%;
  padding: 45px 0;
  text-align: center;
  color: #f2f2f2;
  display: flex;
  justify-content: center;
  line-height: 1;
  align-items: center;
}
.sp_icon {
  width: 50px;
}
.sp_icon img {
  width: 100%;
}
.sp_content {
  text-align: left;
  display: inline-block;
}
.sp_heading {
  margin-bottom: 10px;
  letter-spacing: 3px;
  font-size: 12px;
} 
@media screen and (max-width: 767px){
  #shopify-section-{{section.id}}{
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
  }
  .sp_blk {
    width: 50%;
    padding: 10px 0;
  }
  .sp_blks.Container {
    padding: 30px 0;
     gap: 20px;
  }
  .mm-secure{
    flex: 1;
    display: flex;
    overflow: auto;
}
  .sp_icon {
  margin-right: 9px;
  }
}
{% endstyle %}

<div class="{{ section.settings.extraClass }} mm-secure page-width" data-section="secure_payment">
  <div class="sp_blks Container">
  {% assign imgwidth = section.settings.imgwidth | append:"x"%}
  {% for block in section.blocks %}
    {% if block.settings.image != blank %}
      <div class="sp_blk">
        <div class="sp_icon"><img src="{{ block.settings.image | img_url: 'master' }}"></div>
        <div class="sp_content">
        <div class="sp_subhd">{{ block.settings.title }}</div>
        </div>
      </div>
    {% endif %}
  {% endfor %}
  </div>
</div>


{% schema %}
{
"name": "Promotional Bar",
"settings": [
{
"type": "text",
"id": "extraClass",
"label": "Extra Class"
},
{
"type": "color",
"id": "bgcolor",
"label": "background color"
},
{
"type": "range",
"id": "margin_top",
"min": 0,
"max": 100,
"step": 4,
"unit": "px",
"label": "t:sections.footer.settings.margin_top.label",
"default": 0
}
],
"blocks": [
{
"type": "image",
"name": "Image",
"settings": [
{
"type": "image_picker",
"id": "image",
"label": "Image"
},
{
"type": "text",
"id": "title",
"label": "Title",
"info":"Use ^ for split text"
}
]
}
],
"presets": [
{
"name": "Promotional Bar"
}
]
}
{% endschema %}

